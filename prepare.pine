#!/bin/sh
source functions.pine

cat <<EOF >> /etc/apk/repositories
http://dl-cdn.alpinelinux.org/alpine/edge/testing
EOF

apk add --update-cache \
    bash \
	wget \
	git \
	unzip \
	xz \
	coreutils \
	blkid \
	binutils \
	multipath-tools \
	ca-certificates \
	util-linux \
	sfdisk \
	ostree \
	grub-bios \
	xfsprogs \
	go musl-dev

source ./functions.pine
source ./glib.pine